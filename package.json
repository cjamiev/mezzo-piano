{
  "name": "piano-app",
  "version": "0.4.0",
  "private": true,
  "description": "Create Sheet music and display future songs to play",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "format": "prettier --write \"src/**/*.js\"",
    "eslint-fix": "eslint --ext .js src/ -f html -o ./coverage/eslint-report.html",
    "coverage": "jest --env=jsdom --coverage --json --outputFile=./coverage/outputfile.json",
    "e2e": "cypress run",
    "e2e:watch": "cypress open",
    "test": "jest --env=jsdom --watch",
    "t": "jest --env=jsdom src/components/atoms/KeySignature/KeySignature.test.js --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.12.8",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@testing-library/react": "11.2.2",
    "@testing-library/react-hooks": "3.4.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.6.3",
    "babel-loader": "^8.2.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "css-loader": "^5.0.1",
    "cypress": "^6.1.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "jest": "26.6.3",
    "prettier": "2.2.0",
    "react-test-renderer": "17.0.1",
    "redux-logger": "^3.0.6",
    "style-loader": "2.0.0",
    "webpack": "^5.6.0",
    "webpack-bundle-analyzer": "^4.2.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "constants": "./src/constants"
          }
        }
      ]
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "moduleDirectories": [
      "src",
      "src/testHelper",
      "node_modules"
    ],
    "moduleNameMapper": {
      "testHelper(.*)$": "<rootDir>/src/testHelper/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/cssTransformer.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/fileTransformer.js"
    },
    "testPathIgnorePatterns": [
      "src/testHelper"
    ],
    "testRegex": "src/.*\\.test.(js|jsx)$",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/config/setupTests.js"
    ]
  }
}